{
  "name": "lazy-todolist",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && copyfiles \"src/views/**/*.pug\" \"src/public/**/*\" dist",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,pug,css}\"",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "author": "Yar D'Onofrio",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.14.1",
    "pug": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.21",
    "winston": "^3.17.0"
  },
  "description": "A lazy todolist web app for lazy todoersss",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.2",
    "@types/pug": "^2.0.10",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
