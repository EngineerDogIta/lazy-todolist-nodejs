if tasklist.length > 0
    .list-group
        each task in tasklist
            .list-group-item.d-flex.justify-content-between.align-items-center.animate__animated.animate__fadeIn
                span.task-title #{task.title}
                form(action="/admin/delete-task", method="get")
                    input(type="hidden", name="taskId" value=task.id)
                    button.btn.btn-outline-danger.btn-sm(type="submit" title="Elimina")
                        i.fa.fa-trash.mr-1
                        | Elimina
else
    .empty-state
        i.fas.fa-clipboard-check.mb-3
        p.lead.mb-0 Nessun compito da fare